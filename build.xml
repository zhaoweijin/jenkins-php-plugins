<?xml version="1.0" encoding="UTF-8"?>
<project name="Money" default="build">
 <target name="build" depends="prepare,lint,phploc-ci,pdepend,phpmd-ci,phpcs-ci,phpcpd-ci,phpunit,phpdox"/>

 <target name="clean" unless="clean.done" description="Cleanup build artifacts">
  <delete dir="${basedir}/build/sample/api"/>
  <delete dir="${basedir}/build/sample/coverage"/>
  <delete dir="${basedir}/build/sample/logs"/>
  <delete dir="${basedir}/build/sample/pdepend"/>
  <delete dir="${basedir}/build/sample/phpdox"/>
  <property name="clean.done" value="true"/>
 </target>

 <target name="prepare" unless="prepare.done" depends="clean,generate-code" description="Prepare for build">
  <mkdir dir="${basedir}/build/sample/api"/>
  <mkdir dir="${basedir}/build/sample/coverage"/>
  <mkdir dir="${basedir}/build/sample/logs"/>
  <mkdir dir="${basedir}/build/sample/pdepend"/>
  <property name="prepare.done" value="true"/>
 </target>

 <target name="generate-code" description="Generate Currency-specific subclasses of Money and autoloader code">
  

  <exec executable="${basedir}/tools/phpab.phar" taskname="generate-code">
   <arg value="--output" />
   <arg path="src/autoload.php" />
   <arg path="src" />
  </exec>
 </target>

 <target name="lint" depends="generate-code">
  <apply executable="php" failonerror="true" taskname="lint">
   <arg value="-l" />

   <fileset dir="${basedir}/src">
    <include name="**/*.php" />
    <modified />
   </fileset>

   <fileset dir="${basedir}/tests">
    <include name="**/*.php" />
    <modified />
   </fileset>
  </apply>
 </target>

 <target name="phploc" description="Measure project size using PHPLOC">
  <exec executable="${basedir}/tools/phploc.phar" taskname="phploc">
   <arg value="--count-tests" />
   <arg path="${basedir}/src" />
   <arg path="${basedir}/tests" />
  </exec>
 </target>

 <target name="phploc-ci" depends="prepare" description="Measure project size using PHPLOC and log result in CSV and XML format">
  <exec executable="${basedir}/tools/phploc.phar" taskname="phploc">
   <arg value="--count-tests" />
   <arg value="--log-csv" />
   <arg path="${basedir}/build/sample/logs/phploc.csv" />
   <arg value="--log-xml" />
   <arg path="${basedir}/build/sample/logs/phploc.xml" />
   <arg path="${basedir}/src" />
   <arg path="${basedir}/tests" />
  </exec>
 </target>

 <target name="pdepend" depends="prepare" description="Calculate software metrics using PHP_Depend">
  <exec executable="${basedir}/tools/pdepend.phar" taskname="pdepend">
   <arg value="--jdepend-xml=${basedir}/build/sample/logs/jdepend.xml" />
   <arg value="--jdepend-chart=${basedir}/build/sample/pdepend/dependencies.svg" />
   <arg value="--overview-pyramid=${basedir}/build/sample/pdepend/overview-pyramid.svg" />
   <arg path="${basedir}/src" />
  </exec>
 </target>

 <target name="phpmd" description="Perform project mess detection using PHPMD and print result in text format">
  <exec executable="${basedir}/tools/phpmd.phar" taskname="phpmd">
   <arg path="${basedir}/src" />
   <arg value="text" />
   <arg path="${basedir}/build/sample/phpmd.xml" />
  </exec>
 </target>

 <target name="phpmd-ci" depends="prepare" description="Perform project mess detection using PHPMD and log result in XML format">
  <exec executable="${basedir}/tools/phpmd.phar" taskname="phpmd">
   <arg path="${basedir}/src" />
   <arg value="xml" />
   <arg path="${basedir}/build/sample/phpmd.xml" />
   <arg value="--reportfile" />
   <arg path="${basedir}/build/sample/logs/pmd.xml" />
  </exec>
 </target>

 <target name="phpcs" description="Find coding standard violations using PHP_CodeSniffer and print result in text format">
  <exec executable="${basedir}/tools/phpcs.phar" taskname="phpcs">
   <arg value="--standard=PSR2" />
   <arg value="--extensions=php" />
   <arg value="--ignore=autoload.php" />
   <arg path="${basedir}/src" />
   <arg path="${basedir}/tests" />
  </exec>
 </target>

 <target name="phpcs-ci" depends="prepare" description="Find coding standard violations using PHP_CodeSniffer and log result in XML format">
  <exec executable="${basedir}/tools/phpcs.phar" output="/dev/null" taskname="phpcs">
   <arg value="--report=checkstyle" />
   <arg value="--report-file=${basedir}/build/sample/logs/checkstyle.xml" />
   <arg value="--standard=PSR2" />
   <arg value="--extensions=php" />
   <arg value="--ignore=autoload.php" />
   <arg path="${basedir}/src" />
  </exec>
 </target>

 <target name="phpcpd" description="Find duplicate code using PHPCPD">
  <exec executable="${basedir}/tools/phpcpd.phar" taskname="phpcpd">
   <arg path="${basedir}/src" />
  </exec>
 </target>

 <target name="phpcpd-ci" depends="prepare" description="Find duplicate code using PHPCPD and log result in XML format">
  <exec executable="${basedir}/tools/phpcpd.phar" taskname="phpcpd">
   <arg value="--log-pmd" />
   <arg path="${basedir}/build/sample/logs/pmd-cpd.xml" />
   <arg path="${basedir}/src" />
  </exec>
 </target>

 <target name="phpunit" depends="prepare" description="Run unit tests with PHPUnit">
  <exec executable="${basedir}/tools/phpunit.phar" failonerror="true" taskname="phpunit">
   <arg value="--configuration"/>
   <arg path="${basedir}/build/sample/phpunit.xml"/>
  </exec>
 </target>

 <target name="phpdox" depends="phploc-ci,phpcs-ci,phpmd-ci" description="Generate API documentation using phpDox">
  <exec executable="${basedir}/tools/phpdox.phar" dir="${basedir}/build/sample/" taskname="phpdox"/>
 </target>
</project>

